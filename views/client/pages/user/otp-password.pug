extends ../../layout/default.pug
include ../../mixins/alert.pug

block main
  .container.my-5
    .row.justify-content-center
      .col-8.col-md-6.col-lg-4
        .card.shadow-sm
          .card-header.bg-primary.text-white.text-center
            h5.card-title.mb-0 Nhập Mã OTP
          .card-body.p-4
            p.text-muted.text-center Mã xác thực đã được gửi đến email: 
              strong #{email} 
            
            +alert-error(5000)

            form(
              action="/user/password/otp"
              method="POST"
            )
              //- Hidden input để gửi kèm email nếu cần (hoặc server lưu trong cookie)
              input(type="hidden" name="email" value=email)

              .mb-3
                label.form-label(for="otp") Mã OTP
                input#otp.form-control(
                  type="text"
                  name="otp"
                  placeholder="Nhập mã 6 số"
                  maxlength="6"
                  required
                  autofocus
                )
                .form-text.text-muted Mã có hiệu lực trong 3 phút.

              .d-grid
                button.btn.btn-primary(type="submit") Xác nhận

          .card-footer.text-center.py-3
            span Chưa nhận được mã? 
            a.text-decoration-none(href="/user/password/forgot") Gửi lại