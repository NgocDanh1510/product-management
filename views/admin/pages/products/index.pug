extends ../../layout/default
include ../../mixins/box-head.pug
include ../../mixins/filterStatus.pug
include ../../mixins/search.pug

block main
  +box-head("Danh Sách Sản Phẩm")
  .card.mb-3
    .card-header Bộ lọc và tìm kiếm
    .card-body
      .row 
        .col-8
          +filterStatus(status)
        .col-4 
          +search(keyword)



  table.table.table-hover
    thead 
      tr 
        th STT 
        th Hình ảnh
        th Tiêu đề 
        th Giá
        th Trạng thái
        th Hoạt động
    tbody
      each item, index in listProduct
        tr 
          td #{index+1}
          td
            img(
              src=item.thumbnail
              alt=item.title
              width="100px"
              height="auto"
              class="border "
            )
          td #{item.title}
          td #{item.price}
          td
            a(
              href="#"
              class=`badge text-white text-decoration-none ${
                item.availabilityStatus === "In Stock" ? "bg-success" : "bg-danger"
              }`
            ) #{item.availabilityStatus}

          td
            button.btn.btn-warning edit
            button.btn.btn-danger.ms-2 delete
  nav(aria-label="Page navigation example")
    ul.pagination
      li.page-item
        button.page-link() Previous
      - for(let i =1; i<= pagination.pageTotal;i++)
        li.page-item
          button.page-link(class=`${pagination.currentPage===i? "active":""}`)= i 
      li.page-item
        button.page-link(href='#') Next     
